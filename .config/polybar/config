[colors]
background = #1e2529
background-alt = #e6ee
foreground = #dfdfdf
foreground-alt = #555555
intel = #0071c5
nvidia = #76b900
redshift = #d08770
spotify = #1db954
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
success = #55aa55
purple = #6600cc
info = #0a6cf5
blue = #2ecfff
amber = #ffb642
green = #1aff80
white = #c0ffff

[global/wm]
margin-top = 5
margin-left = 5
margin-bottom = 5

[bar/default]
width = 100%
height = 40
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
underline-size = 4

# no borders
border-top-size = 20
border-left-size = 20
border-right-size = 20
border-color = transparent

module-margin-left = 1
module-margin-right = 1

font-0 = Liberaton Sans:pixelsize=12;4
font-1 = Font Awesome 5 Pro:fontformat=truetype:size=12;3
font-2 = Font Awesome 5 Brands:fontformat=truetype:size=12;3

modules-left = i3
modules-center = calendar
modules-right = spotify battery volume backlight cpu memory temperature redshift

[module/backlight]
type = custom/script
exec = ~/.config/polybar/scripts/light.sh
interval = 0.5
label = %output:0:30:...%
format = <label>
format-padding = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <label-charging>  
format-charging-underline = ${colors.info}
format-charging-padding = 2

format-discharging = <label-discharging>  <ramp-capacity>
format-discharging-underline = ${colors.amber}
format-discharging-padding = 2

format-full = <label-full>  <ramp-capacity>
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.success}
format-full-padding = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/compton]
type = custom/script
exec = ~/.config/polybar/scripts/compton.sh
interval = 1
click-left = ~/.config/polybar/scripts/compton.sh --toggle

[module/cpu]
type = custom/script
exec = ~/.config/polybar/scripts/cpu.sh
interval = 0.5
label = %output:0:30:...%
format = <label>
format-padding = 2

[module/calendar]
type = custom/script
exec = ~/.config/polybar/scripts/calendar.sh
interval = 1
click-left = ~/.config/polybar/scripts/calendar.sh --popup

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %index%  %icon%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

label-unfocused = %index%  %icon%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

label-urgent = %index%!  %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

label-visible = %index%  %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;

[module/memory]
type = custom/script
exec = ~/.config/polybar/scripts/memory.sh
interval = 0.5
label = %output:0:30:...%
format = <label>
format-padding = 2

[module/redshift]
type = custom/script
exec = ~/.config/polybar/scripts/redshift.sh
interval = 5
format-padding = 2

[section/spotifyStyle]
format-underline = ${colors.spotify}
format-padding = 2

[module/spotify]
inherit = section/spotifyStyle
type = custom/script
exec-if = pgrep -x spotify
exec = sh ~/.config/polybar/scripts/spotify.sh
click-left = playerctl -p spotify play-pause
label = %output:0:30:...%
format = <label>
interval = 1

[module/temperature]
type = custom/script
exec = ~/.config/polybar/scripts/temperature.sh
interval = 0.5
label = %output:0:30:...%
format = <label>
format-padding = 2

[module/volume]
type = internal/volume

format-volume = <label-volume>  <ramp-volume>
label-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.info}
format-volume-padding = 2
format-muted-padding = 2

format-muted-foreground = ${colors.foreground-alt}
label-muted = 
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
